{% if title == undefind %}
    {% set title = '汇付宝收银台' %}
{% endif %}

<html>
    <head>
        <title>{{title}}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=no"/>
        <!-- IOS 主屏启动全屏 -->
        <meta name="apple-mobile-web-app-capable" content="no"/>
        <meta name="apple-touch-fullscreen" content="no"/>

        <!-- 禁止百度转码 -->
        <meta http-equiv="Cache-Control" content="no-siteapp"/>

        <!-- 优先最新版IE、Chrome -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

        <meta http-equiv="pragma" content="no-cache">
        <meta http-equiv="cache-control" content="no-cache">
        <meta http-equiv="expires" content="0">
        <meta name="format-detection" content="telephone=no">

        {% block commonHeader %}
            <link rel="stylesheet" href="/public/css/main.css"/>
            <link rel="stylesheet" href="/public/css/list.css"/>
            <link rel="stylesheet" href="/public/css/weui-v2.1.3.css"/>

            <script src="/public/js/zepto.1.0.min.js"></script>
            <script src="/public/js/hy.mobile.1.0.js"></script>
            <script src="/public/js/common.js"></script>
            <script src="/public/js/weui.min.js"></script>
            
        {% endblock %}

        {% block header %}{% endblock %}
    </head>
    <body>
        <header class="header-box">
            <a class="header-box-left" onclick="goBack('-1')"></a>
            <h1>
                {{title}}
            </h1>
        </header>
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
    </body>
</html>